<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/base_titlebar_bg"
              android:gravity="center_vertical"
              android:padding="8dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_album"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/music_default_small"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:singleLine="true"
            android:id="@+id/notification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textColor="#ffff"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汪峰"
            android:textColor="#66ffffff"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/notification_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/noti_pre_selector"/>
    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/noti_play_selector"/>

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/noti_next_selector"/>
</LinearLayout>